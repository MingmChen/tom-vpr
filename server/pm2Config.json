{
	"name": "vpr_server",
	"script": "./app.js",
	"cwd": "./",

	"watch": [
		"controller",
		"middlewares",
		"model",
		"utils",
		"views"
	],
	"ignore_watch": [
		"node_modules",
		"logs",
		"public",
		"audio",
		"token"
	],
	"watch_options": {
		"followSymlinks": false
	},
	"error_file": "./logs/app-err.log",
	"out_file": "./logs/app-out.log",
	"log_date_format" : "YYYY-MM-DD HH:mm Z",
	"env": {
		"NODE_ENV": "production"
	}
}
